<p><%= @eachTopic.title %><p>

<% if user_signed_in? %>
  <p>コメントする</p>
  <%= form_for @comment, url: top_index_path, method: :post do |c| %>
    <%= c.label "コメント"%><%= c.text_area :word %>
    <%= c.hidden_field :top_id, value: @eachTopic.id %>
    <%= c.hidden_field :user_id, value: @user%>
    <%= c.submit "送信" %>
  <% end %>
<% else %>
  <p>コメントできません</p>
<% end %> 