<% if @eachTopic.userName == current_user.name %>
  <p><%= @eachTopic.title %><p>
  <%= link_to '削除', top_path(@eachTopic.id), method: :delete %>
 <% else %>
  <p><%= @eachTopic.title %><p>
<% end %>

<% @commentAll.each do |c|%>
<% if user_signed_in? %>
  <% if c.user.name == current_user.name %>
    <div class="eachComment">
      <p class="userName"><%= c.user.name%>さん</p>
      <p><%= c.word %></p>
      <%=link_to '削除', comment_path(c.id), method: :delete, class:"deleteComment"%>
    </div>
  <% else %>
    <div class="eachComment">
      <p class="userName"><%= c.user.name%>さん</p>
      <p class="eachComment" ><%= c.word %></p>
    </div>
  <% end %>
<% else %>
  <div class="eachComment">
    <p class="userName"><%= c.user.name%>さん</p>
    <p class="eachComment" ><%= c.word %></p>
  </div>
<% end %>
<% end %>

<% if user_signed_in? %>
  <p>コメントする</p>
  <%= form_for @comment, url: comment_index_path, method: :post do |c| %>
    <%= c.label "コメント"%><br />
    <%= c.text_area :word %><br />
    <%= c.hidden_field :top_id, value: @eachTopic.id %>
    <%= c.hidden_field :user_id, value: current_user.id%>
    <%= c.submit "送信" %>
  <% end %>
<% else %>
  <p>コメントできません</p>
<% end %> 
<%=link_to '戻る', top_index_path %>